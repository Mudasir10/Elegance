<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customerDispId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/lineraLayout"
            android:text="@string/customer_id"
            android:textAlignment="viewStart"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customerDispName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerDispId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/lineraLayout"
            android:text="@string/customer_name"
            android:textAlignment="viewStart"
            android:textSize="17sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/customerDispContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textStyle="normal"
            android:textSize="17sp"
            android:text="@string/phone"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/customerDispName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/lineraLayout"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/lineraLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            >

            <Button
                android:background="@drawable/ic_refresh_black_24dp"
                android:id="@+id/updateMeasurement"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:background="@drawable/ic_orders"
                android:id="@+id/viewOrderOfCustomer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/callStitchOrder"
                android:background="@drawable/sewing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
               />

        </LinearLayout>


        </RelativeLayout>



</androidx.cardview.widget.CardView>